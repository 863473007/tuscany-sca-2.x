<project name="copy-files-from-svn"> 
    <target name="copySourceDir"> 
        <copy todir="${to.dir}">
            <fileset dir="${from.dir}">
                <include name="**/*.java"/>
                <exclude name="**/.svn/**/*"/>
            </fileset>
        </copy>
    </target>

    <target name="copyResourceDir"> 
        <copy todir="${to.dir}">
            <fileset dir="${from.dir}">
                <exclude name="**/*.java"/>
                <exclude name="**/.svn/**/*"/>
